---
import { CountUp } from "./CountUp";
---



<section class="max-w-4xl mx-auto py-20 px-20 ">
    <h2 class="text-4xl lg:text-5xl font-tomaso font-semibold text-center text-balance mb-10 lg:mb-20">Nuestros Numeros</h2>
    
    <div class="grid cols-1 lg:grid-cols-3 gap-y-10">

    <div class="flex flex-col justify-center items-center">
         <span class="number text-4xl font-bold tabular-nums tracking-tighter">
            +<CountUp client:visible initial={0} final={15} /></span>
        
        <span class="uppercase opacity-70 text-center"> AÃ±os de experiencia</span>
    </div>

    <div class="flex flex-col justify-center items-center">
            <span class="number text-4xl font-bold tabular-nums tracking-tighter">
                +<CountUp client:visible initial={0} final={30} /></span>
            <span class="uppercase opacity-70 text-center"> Habitaciones confortables</span>
    </div>

    <div class="flex flex-col justify-center items-center">
            <span class="number text-4xl font-bold tabular-nums tracking-tighter">
                +<CountUp client:visible initial={0} final={4.5} decimals={1} />M</span>
            <span class="uppercase opacity-70 text-center"> De clientes satisfechos</span>
    </div>
</div>
</section>


<style>
    .number {
        text-shadow: 
        3px 3px 6px rgba(0, 0, 0, 0.3); /* Sombra de texto */
    }
    
</style>